<?php /* @var $this Mage_Catalog_Block_Product_View_Abstract */?>
<?php $_product = $this->getProduct() ?>

<?php echo $this->getChildHtml('product_type_data_extra') ?>
<div class="price_wrapper">
    <div class="sell_price">
        <label><?php echo $this->__('Selling Price'); ?></label>
        <div class="price-stock">
            <div class="price">
                <?php echo $this->getPriceHtml($_product) ?>
            </div>

            <?php if ($productQty = $_product->getStockItem()->getQty()) : ?>
                <p class="availability in-stock">
                    <span><span class="qty"><?php echo intVal($productQty) ?></span> <?php echo $this->__(' in stock online') ?></span>
                </p>
            <?php else: ?>
                <p class="availability out-stock">
                    <span><?php $this->__('temporarily out of stock.')?></span>
                </p>;
            <?php endif; ?>
        </div>
    </div>
    <div class="buy_price">
        <label><?php echo $this->__('Buying Price'); ?></label>

        <div class="price-know-more">
            <div class="price">
                <?php echo $_product->getBuyingPrice(); ?>
            </div>
            <p class="know-more">
                <span><?php echo $this->__('Know more');?></span><span class="arrow">&nbsp;</span>
            </p>
        </div>
    </div>
</div>